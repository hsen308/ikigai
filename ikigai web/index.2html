<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ikigai - Premium Caf√©</title>
    <link href="https://fonts.googleapis.com/css2?family=Cormorant:wght@300;400;500;600;700&family=Lato:wght@300;400;700&family=Playfair+Display:wght@400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --burgundy: #5c1a1a;
            --gold: #c9a961;
            --cream: #faf8f5;
            --dark: #1a1410;
            --light-gold: #e8d7b5;
            --white: #ffffff;
            --sage: #9ca986;
            --terracotta: #c97d60;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Lato', sans-serif;
            background: var(--cream);
            color: var(--dark);
            line-height: 1.8;
            overflow-x: hidden;
        }

        /* ============================================
           WELCOME SCREEN
        ============================================ */
        #welcome-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            background: linear-gradient(135deg, #5c1a1a 0%, #3d0f0f 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            z-index: 9999;
            transition: opacity 0.8s ease, visibility 0.8s ease;
        }

        #welcome-screen.hidden {
            opacity: 0;
            visibility: hidden;
        }

        .welcome-content {
            text-align: center;
            animation: fadeInUp 1s ease;
            position: relative;
            z-index: 2;
        }

        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .welcome-logo {
            width: 250px;
            height: 250px;
            margin: 0 auto 40px;
            animation: float 3s ease-in-out infinite;
            filter: drop-shadow(0 10px 30px rgba(201, 169, 97, 0.4));
        }

        .welcome-logo img {
            width: 100%;
            height: 100%;
            border-radius: 50%;
        }

        @keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-15px); }
        }

        .welcome-title {
            font-family: 'Playfair Display', serif;
            font-size: 4rem;
            color: var(--white);
            font-weight: 700;
            letter-spacing: 8px;
            margin-bottom: 20px;
            text-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
        }

        .welcome-subtitle {
            font-family: 'Lato', sans-serif;
            font-size: 1.1rem;
            color: var(--light-gold);
            letter-spacing: 6px;
            text-transform: uppercase;
            font-weight: 300;
            margin-bottom: 50px;
        }

        .welcome-divider {
            width: 200px;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--gold), transparent);
            margin: 30px auto;
        }

        .enter-btn {
            display: inline-block;
            padding: 18px 50px;
            background: transparent;
            border: 2px solid var(--gold);
            color: var(--white);
            font-family: 'Lato', sans-serif;
            font-size: 0.9rem;
            letter-spacing: 3px;
            text-transform: uppercase;
            cursor: pointer;
            position: relative;
            overflow: hidden;
            transition: all 0.4s ease;
            font-weight: 600;
        }

        .enter-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: var(--gold);
            transition: left 0.4s ease;
            z-index: -1;
        }

        .enter-btn:hover::before {
            left: 0;
        }

        .enter-btn:hover {
            color: var(--burgundy);
            transform: translateY(-3px);
            box-shadow: 0 10px 30px rgba(201, 169, 97, 0.3);
        }

        /* Decorative elements */
        .welcome-screen::before,
        .welcome-screen::after {
            content: '';
            position: absolute;
            border: 1px solid rgba(201, 169, 97, 0.2);
            border-radius: 50%;
        }

        .welcome-screen::before {
            width: 400px;
            height: 400px;
            top: 10%;
            left: -100px;
            animation: rotate 20s linear infinite;
        }

        .welcome-screen::after {
            width: 300px;
            height: 300px;
            bottom: 10%;
            right: -80px;
            animation: rotate 15s linear infinite reverse;
        }

        @keyframes rotate {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }

        /* ============================================
           MAIN SITE CONTENT
        ============================================ */
        #main-site {
            opacity: 0;
            transition: opacity 0.8s ease 0.3s;
        }

        #main-site.visible {
            opacity: 1;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: 
                radial-gradient(ellipse at top left, rgba(201, 169, 97, 0.08), transparent 50%),
                radial-gradient(ellipse at bottom right, rgba(92, 26, 26, 0.08), transparent 50%);
            pointer-events: none;
            z-index: 0;
        }

        .container {
            max-width: 1100px;
            margin: 0 auto;
            position: relative;
            z-index: 1;
        }

        /* Premium Header */
        header {
            background: linear-gradient(135deg, #5c1a1a 0%, #3d0f0f 100%);
            padding: 80px 30px;
            text-align: center;
            position: relative;
            overflow: hidden;
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.3);
        }

        header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('/mnt/user-data/uploads/esepreso.jpg');
            background-size: cover;
            background-position: center;
            opacity: 0.1;
            filter: blur(2px);
        }

        .logo-container {
            position: relative;
            z-index: 2;
            margin-bottom: 30px;
        }

        .logo-circle {
            width: 200px;
            height: 200px;
            margin: 0 auto;
            border-radius: 50%;
            overflow: hidden;
            box-shadow: 
                0 0 40px rgba(201, 169, 97, 0.5),
                0 20px 60px rgba(0, 0, 0, 0.4);
            animation: floatHeader 6s ease-in-out infinite;
            border: 5px solid var(--gold);
        }

        .logo-circle img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        @keyframes floatHeader {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-12px); }
        }

        .header-divider {
            width: 180px;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--gold), transparent);
            margin: 30px auto;
            position: relative;
            z-index: 2;
        }

        .tagline {
            font-family: 'Lato', sans-serif;
            font-size: 1.1rem;
            color: var(--light-gold);
            letter-spacing: 6px;
            text-transform: uppercase;
            font-weight: 300;
            position: relative;
            z-index: 2;
            text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        }

        /* Premium Navigation */
        nav {
            background: var(--white);
            position: sticky;
            top: 0;
            z-index: 99;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            border-bottom: 3px solid var(--gold);
        }

        .nav-inner {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 0;
            padding: 0;
            max-width: 1200px;
            margin: 0 auto;
        }

        .nav-btn {
            font-family: 'Lato', sans-serif;
            padding: 20px 32px;
            background: transparent;
            border: none;
            color: var(--dark);
            font-size: 0.85rem;
            font-weight: 700;
            letter-spacing: 2px;
            cursor: pointer;
            text-transform: uppercase;
            position: relative;
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border-bottom: 4px solid transparent;
        }

        .nav-btn::before {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%) scaleX(0);
            width: 80%;
            height: 4px;
            background: linear-gradient(90deg, var(--burgundy), var(--gold));
            transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .nav-btn:hover::before,
        .nav-btn.active::before {
            transform: translateX(-50%) scaleX(1);
        }

        .nav-btn:hover,
        .nav-btn.active {
            color: var(--burgundy);
            background: rgba(201, 169, 97, 0.05);
        }

        /* Pages */
        .page {
            display: none;
            padding: 60px 20px;
            animation: fadeIn 0.6s ease;
        }

        .page.active {
            display: block;
        }

        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Category Headers */
        .category {
            margin-bottom: 70px;
        }

        .category-header {
            text-align: center;
            margin-bottom: 50px;
            position: relative;
        }

        .category-header::after {
            content: '';
            width: 100px;
            height: 3px;
            background: linear-gradient(90deg, transparent, var(--gold), transparent);
            position: absolute;
            bottom: -20px;
            left: 50%;
            transform: translateX(-50%);
        }

        .category-title {
            font-family: 'Playfair Display', serif;
            font-size: 2.8rem;
            color: var(--burgundy);
            font-weight: 700;
            margin-bottom: 12px;
            letter-spacing: 2px;
        }

        .category-subtitle {
            font-family: 'Lato', sans-serif;
            font-size: 0.95rem;
            color: var(--gold);
            letter-spacing: 4px;
            text-transform: uppercase;
            font-weight: 400;
        }

        /* Menu Grid */
        .menu-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
            gap: 30px;
            padding: 20px 0;
        }

        .signature-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 35px;
            padding: 20px 0;
        }

        .menu-item {
            background: var(--white);
            border-radius: 20px;
            padding: 30px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            border: 2px solid transparent;
            position: relative;
            overflow: hidden;
        }

        .menu-item::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 4px;
            background: linear-gradient(90deg, var(--burgundy), var(--gold));
            transform: scaleX(0);
            transition: transform 0.4s ease;
        }

        .menu-item:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 50px rgba(92, 26, 26, 0.15);
            border-color: var(--light-gold);
        }

        .menu-item:hover::before {
            transform: scaleX(1);
        }

        .item-image {
            text-align: center;
            margin-bottom: 20px;
        }

        .item-image-icon {
            font-size: 3.5rem;
            filter: drop-shadow(0 4px 10px rgba(0, 0, 0, 0.1));
        }

        .item-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin-bottom: 12px;
            gap: 15px;
        }

        .item-name {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            color: var(--dark);
            font-weight: 600;
            flex: 1;
        }

        .item-price {
            font-family: 'Lato', sans-serif;
            font-size: 1.3rem;
            color: var(--burgundy);
            font-weight: 700;
            white-space: nowrap;
        }

        .item-description {
            font-size: 0.95rem;
            color: #666;
            line-height: 1.6;
            font-style: italic;
        }

        /* Build Your Own Section */
        .option-section {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 40px;
            padding: 20px 0;
        }

        .option-card {
            background: var(--white);
            border-radius: 20px;
            padding: 40px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
            border-top: 4px solid var(--gold);
        }

        .option-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.8rem;
            color: var(--burgundy);
            margin-bottom: 25px;
            text-align: center;
            font-weight: 600;
        }

        .option-list {
            list-style: none;
        }

        .option-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px 0;
            border-bottom: 1px solid rgba(201, 169, 97, 0.2);
            transition: padding-left 0.3s ease;
        }

        .option-item:hover {
            padding-left: 10px;
        }

        .option-item:last-child {
            border-bottom: none;
        }

        .option-name {
            font-size: 1rem;
            color: var(--dark);
            font-weight: 500;
        }

        .option-price {
            font-size: 1.1rem;
            color: var(--burgundy);
            font-weight: 700;
        }

        /* Footer */
        footer {
            background: linear-gradient(135deg, #5c1a1a 0%, #3d0f0f 100%);
            padding: 60px 30px 40px;
            text-align: center;
            color: var(--light-gold);
            position: relative;
            overflow: hidden;
        }

        footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at center, rgba(201, 169, 97, 0.1), transparent 70%);
        }

        .footer-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
            margin: 0 auto;
        }

        .footer-quote {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            font-style: italic;
            color: var(--white);
            margin-bottom: 25px;
            font-weight: 300;
        }

        .footer-divider {
            width: 150px;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--gold), transparent);
            margin: 30px auto;
        }

        .footer-info {
            font-size: 0.95rem;
            line-height: 1.8;
        }

        .footer-info a {
            color: var(--light-gold);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-info a:hover {
            color: var(--gold);
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .welcome-title {
                font-size: 2.8rem;
                letter-spacing: 4px;
            }

            .welcome-logo {
                width: 180px;
                height: 180px;
            }

            .category-title {
                font-size: 2.2rem;
            }

            .menu-grid,
            .signature-grid {
                grid-template-columns: 1fr;
            }

            .nav-btn {
                padding: 16px 20px;
                font-size: 0.75rem;
            }

            .logo-circle {
                width: 150px;
                height: 150px;
            }
        }

        @media (max-width: 480px) {
            .welcome-title {
                font-size: 2rem;
            }

            .enter-btn {
                padding: 15px 40px;
                font-size: 0.8rem;
            }
        }
    </style>
</head>
